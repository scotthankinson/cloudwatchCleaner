{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "rootDirs": [
            "./src",
            "./test"
        ],
        "outDir": "./build",
        "baseUrl": ".",
        "types": [
            "aws-lambda",
            "aws-sdk",
            "expect.js",
            "mocha",
            "node"
        ],
        "typeRoots": [ "node_modules/@types" ]
    },
    "atom": { "rewriteTsconfig": false },
    "typeRoots": [ "node_modules/@types" ]
}
